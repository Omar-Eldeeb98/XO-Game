<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pg3"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:padding="16dp">


            <TextView
                android:id="@+id/t_v_p_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="player 1: 0"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:textStyle="bold"
                android:textColor="#B63309"
                android:textAllCaps="true"
                android:fontFamily="monospace"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/t_v_p_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_below="@+id/t_v_p_1"
                android:text="player 2: 0"
                android:drawableLeft="@drawable/ic_baseline_person_24_2"
                android:textAllCaps="true"
                android:textColor="#693CB8"
                android:fontFamily="monospace"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_Reset"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="reset"
                android:textColor="#ffffff"
                android:fontFamily="monospace"
                android:background="@drawable/gradient_4"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="4dp"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/gradient_2"
            android:textSize="50sp"/>
        <Button
            android:id="@+id/btn_01"
            android:layout_width="0dp"


            android:background="@drawable/gradient_2"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="50sp"/>
        <Button
            android:id="@+id/btn_02"
            android:layout_width="0dp"
            android:background="@drawable/gradient_2"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:textSize="50sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_10"
            android:layout_width="0dp"
            android:background="@drawable/gradient_2"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="50sp"/>
        <Button
            android:id="@+id/btn_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_2"


            android:layout_weight="1"
            android:textSize="50sp"/>
        <Button
            android:id="@+id/btn_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:background="@drawable/gradient_2"
            android:layout_weight="1"
            android:textSize="50sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_20"
            android:layout_width="0dp"
            android:background="@drawable/gradient_2"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="50sp"/>
        <Button
            android:id="@+id/btn_21"
            android:layout_width="0dp"
            android:background="@drawable/gradient_2"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:textSize="50sp"/>
        <Button
            android:id="@+id/btn_22"
            android:layout_width="0dp"
            android:background="@drawable/gradient_2"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:textSize="50sp"/>

    </LinearLayout>










</LinearLayout>